{
  "extends": "@maw/config-ts/configs/next-js.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/root/*": [
        "./*"
      ],
      "@/modules/*": [
        "src/modules/*"
      ],
      "@/kernel": [
        "src/kernel/index.ts"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
