{
  "type": "object",
  "properties": {
    "content": {
      "type": "string"
    },
    "intro": {
      "type": "string",
      "description": "It's recommended to keep the intro below 160 characters or less."
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Must be in ISO 8601 format"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Must be in ISO 8601 format"
    },
    "title": {
      "type": "string",
      "description": "It's recommended to keep the title below 80 characters or less."
    },
    "contentFormat": {
      "type": "string",
      "enum": [
        "markdown",
        "html"
      ],
      "description": "Processing for indexing will be decided based on this value, both html and markdown are supported.\n\nDefaults to markdown.",
      "default": "markdown"
    }
  },
  "required": [
    "content",
    "publishedAt",
    "title"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}