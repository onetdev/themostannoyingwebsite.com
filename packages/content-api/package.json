{
  "private": true,
  "name": "@maw/content-api",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schemas": "./src/schemas/index.ts",
    "./utils": "./src/utils/index.ts"
  },
  "scripts": {
    "build:metadata": "pnpm build:schema && pnpm build:index",
    "build:index": "tsx ./scripts/build-index.ts",
    "build:schema": "tsx ./scripts/build-json-schema.ts",
    "check-types": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@maw/logger": "workspace:^",
    "marked": "catalog:",
    "sanitize-html": "catalog:",
    "yaml": "^2.8.2",
    "zod": "catalog:",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@maw/config-ts": "workspace:*",
    "@maw/utils": "workspace:*",
    "@types/sanitize-html": "catalog:",
    "sharp": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
