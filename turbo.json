{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:metadata": {
      "cache": false
    },
    "test": {
      "cache": false
    }
  },
  "globalEnv": [
    "ANALYZE",
    "CI",
    "GITHUB_TOKEN",
    "NEXT_PUBLIC_IS_DEV",
    "NEXT_PUBLIC_SENTRY_CLIENT_DSN",
    "NEXT_PUBLIC_SENTRY_ENABLED",
    "NEXT_PUBLIC_SITE_URL",
    "SENTRY_AUTH_TOKEN",
    "SENTRY_EDGE_DSN",
    "SENTRY_SERVER_DSN",
    "VERCEL_BRANCH_URL",
    "VERCEL_ENV",
    "VERCEL_GIT_COMMIT_REF",
    "VERCEL_PROJECT_PRODUCTION_URL"
  ]
}
