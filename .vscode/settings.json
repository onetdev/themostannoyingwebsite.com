{
  "editor.formatOnSave": false, // to avoid conflicts with prettier and eslint keep this off
  "prettier.enable": false, // Avoid using prettier plugin since that is being handled by eslint
  "editor.wordWrap": "on",
  "editor.formatOnSaveMode": "modifications",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.classAttributes": [
    "className",
    "class",
    "cx",
    "iteratorClassName",
    "localStyles.*"
  ],
  "yaml.schemas": {
    "src/schemas/article-entry-simplified.schema.json": "public/articles/*/data.yml"
  },
  "json.schemas": [
    {
      "fileMatch": ["public/articles/*-meta.json"],
      "url": "./src/schemas/article-locale-meta.schema.json"
    }
  ],
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.json, tsconfig.tsbuildinfo",
    "package.json": "package-lock.json, pnpm*",
    "README.md": "CODE_OF_CONDUCT.md, CONTRIBUTING.md, LICENSE",
  },
}
